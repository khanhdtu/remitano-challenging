{
  "compilerOptions": {
    "target": "ES2018",
    "jsx": "preserve",
    "declaration": true,
    "strict": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "noImplicitReturns": true,
    "stripInternal": true,
    "types": [],
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "lib": ["dom", "dom.iterable", "esnext"],
    "allowJs": true,
    "skipLibCheck": true,
    "noEmit": true,
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "baseUrl": ".",
    "paths": {
      "@server/*": ["server/*"],
      "@server-middlewares": ["server/middlewares/index"],
      "@components/*": ["components/*"],
      "@services/*": ["services/*"],
      "@pages/*": ["pages/*"],
      "@styles/*": ["styles/*"],
      "@interfaces": ["interfaces/index"],
      "@utils": ["utils/index"]
    },
    "incremental": true,
    "module": "esnext"
  },
  "include": ["."],
  "exclude": ["node_modules"]
}
